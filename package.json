{
  "name": "oarn-contracts",
  "version": "0.1.0",
  "description": "OARN Network Smart Contracts - Decentralized AI Research Infrastructure",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "coverage": "hardhat coverage",
    "deploy:local": "hardhat run scripts/deploy.ts --network localhost",
    "deploy:sepolia": "hardhat run scripts/deploy.ts --network arbitrumSepolia",
    "verify": "hardhat verify --network arbitrumSepolia",
    "lint": "solhint 'contracts/**/*.sol'",
    "format": "prettier --write 'contracts/**/*.sol' 'test/**/*.ts' 'scripts/**/*.ts'"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/contracts": "^5.0.0",
    "@openzeppelin/contracts-upgradeable": "^5.0.0",
    "hardhat": "^2.19.0",
    "prettier": "^3.0.0",
    "prettier-plugin-solidity": "^1.2.0",
    "solhint": "^4.0.0"
  },
  "keywords": [
    "ethereum",
    "arbitrum",
    "smart-contracts",
    "ai",
    "decentralized",
    "oarn"
  ],
  "author": "OARN Network Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/oarn-network/oarn-contracts.git"
  },
  "dependencies": {
    "dotenv": "^17.3.0"
  }
}
